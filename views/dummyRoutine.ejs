<!-- will make it automatically change after making crud function -->
<div class="dummyRoutine">
    <div class="dummyRoutine__title">
        <h1 id="routineName"><%= selectedRoutine.routinename %></h1>
        <p> <%= selectedRoutine.description %></p>
        <hr>
    </div>
    
    <div class="dummyRoutine__content">
        <div class="dummyRoutine__exercise">
            <% selectedRoutine.exercises.forEach(exercise => { %>

                <table id="exerciseTable">
                    <tr>
                        <th colspan="<% if (exercise.type === 'duration' || exercise.type === 'repsOnly') { %>
                            2
                        <% } else { %>
                            3
                        <% } %>" class="exercises__caption"><%= exercise.exercisename %></th>
                    </tr>
                    
                    <tr>
                        <td>Set</td>
                        <% if (exercise.type === 'reps' || exercise.type === 'repsPlusKg' || exercise.type === 'repsMinusKg') { %>
                            <td>Weight (KG)</td>
                            <td>Reps</td>
                        <% } else if (exercise.type === 'duration') { %>
                            <td>Duration (hh:mm:ss) </td>
                        <% } else if (exercise.type === 'distanceDuration') { %>
                            <td>Distance (KM)</td>
                            <td>Duration (hh:mm:ss) </td>
                        <% } else if (exercise.type === 'kgDistance') { %>
                            <td>Weight (KG)</td>
                            <td>Distance (KM)</td>
                        <% } else if (exercise.type === 'repsOnly') {%>
                            <td>Reps</td>
                        <% } %>
                    </tr>
                    <tr>
                        <td>1</td>
                        <% if (exercise.type === 'reps' || exercise.type === 'repsPlusKg' || exercise.type === 'repsMinusKg') { %>
                            <td>...kg</td>
                            <td>...</td>
                        <% } else if (exercise.type === 'duration') { %>
                            <td>hh:mm:ss</td>
                        <% } else if (exercise.type === 'distanceDuration') { %>
                            <td>....km</td>
                            <td>hh:mm:ss</td>
                        <% } else if (exercise.type === 'kgDistance') { %>
                            <td></td>
                            <td></td>
                        <% } else if (exercise.type === 'repsOnly') {%>
                            <td>Reps</td>
                        <% } %>
                    </tr>

                    <tr>
                        <th colspan="3"><button onclick="addSetSidebar('<%= exercise.exercisename %>', '<%= exercise.type %>')">+ Add Set</button></th>
                    </tr>
                    <!-- dynamically updated based on selected routine -->
                </table>
                <br>
                <% }) %>
            <!-- Center the button please -->
            <a class='AddExercise' onclick="addExerciseSidebar()">+ Add Exercise</a>
    </div>
        
        <%- include('info.ejs') %>
    </div>
    
</div>