<!-- will make it automatically change after making crud function -->
<div class="dummyRoutine">
    <div class="dummyRoutine__title">
        <h1 id="routineName"><%= selectedRoutine.routinename %></h1>
        <p> <%= selectedRoutine.description %></p>
        <hr>
    </div>
    
    <div class="dummyRoutine__content">
        <div class="dummyRoutine__exercise">
            
            <% selectedRoutine.exercises.forEach(exercises => { %>
                <table id="exerciseTable">
                    <tr>
                        <th colspan="<% if (exercises.type === 'duration' || exercises.type === 'repsOnly') { %>
                            2
                        <% } else { %>
                            3
                        <% } %>" class="exercises__caption"><%= exercises.exercisename %></th>
                    </tr>
                    
                    <tr>
                        <td>Set</td>
                        <% if (exercises.type === 'reps' || exercises.type === 'repsPlusKg' || exercises.type === 'repsMinusKg') { %>
                            <td>Weight (KG)</td>
                            <td>Reps</td>
                        <% } else if (exercises.type === 'duration') { %>
                            <td>Duration (hh:mm:ss) </td>
                        <% } else if (exercises.type === 'distanceDuration') { %>
                            <td>Distance (KM)</td>
                            <td>Duration (hh:mm:ss) </td>
                        <% } else if (exercises.type === 'kgDistance') { %>
                            <td>Weight (KG)</td>
                            <td>Distance (KM)</td>
                        <% } else if (exercises.type === 'repsOnly') {%>
                            <td>Reps</td>
                        <% } %>
                    </tr>
                    <tr>
                        <td>1</td>
                        <% if (exercises.type === 'reps' || exercises.type === 'repsPlusKg' || exercises.type === 'repsMinusKg') { %>
                            <td>...kg</td>
                            <td>...</td>
                        <% } else if (exercises.type === 'duration') { %>
                            <td>hh:mm:ss</td>
                        <% } else if (exercises.type === 'distanceDuration') { %>
                            <td>....km</td>
                            <td>hh:mm:ss</td>
                        <% } else if (exercises.type === 'kgDistance') { %>
                            <td></td>
                            <td></td>
                        <% } else if (exercises.type === 'repsOnly') {%>
                            <td>Reps</td>
                        <% } %>
                    </tr>

                    <tr>
                        <th colspan="3"><button onclick="addSetSidebar('<%= exercises.exercisename %>', '<%= exercises.type %>')">+ Add Set</button></th>
                    </tr>
                </table>
                <br>
                <% }) %>
                <% selectedRoutine.customexercises.forEach(customexercises => { %>
                    <table id="exerciseTable">
                        <tr>
                            <th colspan="<% if (customexercises.type === 'duration' || customexercises.type === 'repsOnly') { %>
                                2
                            <% } else { %>
                                3
                            <% } %>" class="exercises__caption"><%= customexercises.exercisename %></th>
                        </tr>
                        
                        <tr>
                            <td>Set</td>
                            <% if (customexercises.type === 'reps' || customexercises.type === 'repsPlusKg' || customexercises.type === 'repsMinusKg') { %>
                                <td>Weight (KG)</td>
                                <td>Reps</td>
                            <% } else if (customexercises.type === 'duration') { %>
                                <td>Duration (hh:mm:ss) </td>
                            <% } else if (customexercises.type === 'distanceDuration') { %>
                                <td>Distance (KM)</td>
                                <td>Duration (hh:mm:ss) </td>
                            <% } else if (customexercises.type === 'kgDistance') { %>
                                <td>Weight (KG)</td>
                                <td>Distance (KM)</td>
                            <% } else if (customexercises.type === 'repsOnly') {%>
                                <td>Reps</td>
                            <% } %>
                        </tr>
                        <tr>
                            <td>1</td>
                            <% if (customexercises.type === 'reps' || customexercises.type === 'repsPlusKg' || customexercises.type === 'repsMinusKg') { %>
                                <td>...kg</td>
                                <td>...</td>
                            <% } else if (customexercises.type === 'duration') { %>
                                <td>hh:mm:ss</td>
                            <% } else if (customexercises.type === 'distanceDuration') { %>
                                <td>....km</td>
                                <td>hh:mm:ss</td>
                            <% } else if (customexercises.type === 'kgDistance') { %>
                                <td></td>
                                <td></td>
                            <% } else if (customexercises.type === 'repsOnly') {%>
                                <td>Reps</td>
                            <% } %>
                        </tr>
    
                        <tr>
                            <th colspan="3"><button onclick="addSetSidebar('<%= customexercises.exercisename %>', '<%= customexercises.type %>')">+ Add Set</button></th>
                        </tr>
                    </table>
                    <br>
                    <% }) %>
            <!-- Center the button please -->
            <a class='AddExercise' onclick="addExerciseSidebar()">+ Add Exercise</a>
    </div>
        
        <%- include('info.ejs') %>
    </div>
    
</div>