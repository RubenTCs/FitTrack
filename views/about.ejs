  /* CSS untuk menambahkan jarak di antara setiap paragraf */
  p {
    margin-bottom: 20px; /* Menambahkan jarak 20px di bagian bawah setiap paragraf */
    text-align: left; /* Posisikan teks paragraf ke kiri */
    margin-left: 30px; /* Menambahkan margin kiri sebesar 30px */
    max-width: 700px; /* Mengatur lebar maksimum teks */
  }

  /* CSS untuk memposisikan judul utama di tengah dan menurunkannya */
  h1 {
    text-align: center; /* Posisikan teks di tengah */
    margin-top: 0vh; /* Menurunkan judul sekitar 15% dari posisinya */
    margin-bottom: 0vh; /* Menambahkan jarak 15% di bagian bawah judul */
    color: rgb(223, 155, 52);
    background-image: url('https://25070129.fs1.hubspotusercontent-eu1.net/hubfs/25070129/Images%20-%20Blog/Vignettes/57.svg'); /* Ganti URL dengan URL gambar latar belakang yang Anda inginkan */
