    padding: 150px; /* Menambahkan padding agar teks tidak terlalu dekat dengan gambar */
  }

  /* CSS untuk memposisikan judul kedua di tengah dan menurunkannya */
  h2 {
    text-align: left; /* Posisikan teks h2 ke kiri */
    color: rgb(223, 155, 52);
    margin-left: 30px; /* Menambahkan margin kiri sebesar 20px */
  }

  /* CSS untuk gambar */
  .image-right {
    float: right; /* Menempatkan gambar pada sisi kanan */
    margin-top: 30px;
    margin-left: 20px; /* Menambahkan margin kiri sebesar 20px */
    margin-right: 30px;
    margin-bottom: 20px; /* Menambahkan jarak di bagian bawah gambar */
    max-width: 50%; /* Mengatur lebar maksimum gambar menjadi 50% dari lebar layar */
    width: 700px; /* Mengatur lebar gambar agar dapat menyesuaikan */
    height: 400px; /* Mengatur tinggi gambar agar dapat menyesuaikan */
  }

